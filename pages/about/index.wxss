/* pages/articles/index.wxss */
@import '../../common/assets/style/layout.wxss';

page {
  background: white;
}

.about {
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
}

.content {
  font-size: 16px;
  line-height: 20px;
  color: #444;
  /* padding: 5px; */
}

/*时间轴*/

/*外部容器*/

.listview-container {
  margin: 10rpx 10rpx;
}

.listview-container .history {
  text-align: center;
  font-size: 20px;
  padding-bottom: 10px;
  border-bottom: 1rpx dotted #ddd;
  margin-bottom: 10px;
  width: 90%;
  margin-left: 15px;
}

.ide_info {
  padding-top: 15px;
  line-height: 30px;
}

/*行样式*/

.playlog-item {
  display: flex;
}

/*时间轴*/

.playlog-item .dotline {
  width: 35px;
  position: relative;
}

/*竖线*/

.playlog-item .dotline .line {
  width: 1px;
  height: 100%;
  background: #ccc;
  position: absolute;
  top: 0;
  left: 15px;
}

/*圆点*/

.playlog-item .dotline .dot {
  width: 11px;
  height: 11px;
  background: #30ac63;
  position: absolute;
  top: 10px;
  left: 10px;
  border-radius: 50%;
}

/*时间戳*/

.playlog-item .dotline .time {
  width: 100%;
  position: absolute;
  margin-top: 30px;
  z-index: 99;
  font-size: 12px;
  color: #777;
  text-align: center;
}

/*右侧主体内容*/

.playlog-item .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* border-bottom: 1px solid #ddd; */
  margin: 3px 0;
}

.playlog-item .content:first-child {
  border-top: 1px solid #ddd;
}

.playlog-item .content .chapter {
  font-size: 30rpx;
  line-height: 68rpx;
  color: #444;
  white-space: normal;
  padding-right: 10px;
}

.playlog-item .content .course {
  font-size: 28rpx;
  line-height: 56rpx;
  color: #999;
}
